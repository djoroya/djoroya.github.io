---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
import Fiber from "./Fiber.jsx";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Fiber client:load />
    <!-- <ParticleSimulation client:load /> -->
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Deyviss Jesus Oroya-Villalta
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      I'm a physicist and simulation engineer. I'm passionate about
      computational physics, scientific computing, and software development.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/cv/"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-rocket" />
        Curriculum Vitae
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/djoroya"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-github" />
        GitHub Repo
      </Link>
    </div>
  </div>
</main>
